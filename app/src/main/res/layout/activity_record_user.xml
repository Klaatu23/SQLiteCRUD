<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecordUser">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="116dp" android:layout_marginLeft="73dp" android:layout_marginStart="73dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt11"
            app:layout_constraintStart_toStartOf="@+id/edt1" android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@+id/edt1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edt2"
            app:layout_constraintStart_toStartOf="@+id/edt11" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/edt11"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edt22"
            android:contentDescription="Confirmar Password" app:layout_constraintStart_toStartOf="@+id/edt2"
            android:layout_marginTop="37dp" app:layout_constraintTop_toBottomOf="@+id/edt2"/>
    <Button
            android:text="Registrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bt2"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/edt22" android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp" app:layout_constraintEnd_toEndOf="@+id/edt22"/>


</androidx.constraintlayout.widget.ConstraintLayout>