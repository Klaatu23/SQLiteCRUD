<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Gifts">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt1"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp" android:layout_marginBottom="23dp"
            app:layout_constraintEnd_toEndOf="@+id/list" app:layout_constraintBottom_toTopOf="@+id/list"/>
    <ListView
            android:layout_width="0dp"
            android:layout_height="98dp"
            android:id="@+id/list"
            android:layout_marginTop="198dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="68dp"
            android:layout_marginStart="68dp" android:layout_marginEnd="68dp" android:layout_marginRight="68dp"/>
    <Button
            android:text="Consultar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bt1"
            app:layout_constraintStart_toStartOf="@+id/bt3" app:layout_constraintBaseline_toBaselineOf="@+id/bt2"/>
    <Button
            android:text="Insertar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bt2"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" app:layout_constraintStart_toEndOf="@+id/bt1"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/bt4"/>
    <Button
            android:text="Eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bt3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt4" android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp" android:layout_marginBottom="88dp"/>
    <Button
            android:text="Actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bt4"
            app:layout_constraintBaseline_toBaselineOf="@+id/bt3"
            android:layout_marginEnd="83dp" android:layout_marginRight="83dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>